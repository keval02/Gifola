<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddSubMemberActivity">

    <include layout="@layout/custom_toolbar_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:visibility="visible">
                <!--        android:background="@drawable/button_layout_grey"-->

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center">

                                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/profile_image"
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/user3"
                                    app:civ_border_color="@color/grey"
                                    app:civ_border_width="0.5dp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <!--                                <com.gifola.customfonts.MyTextViewBold-->
                                <!--                                    android:layout_width="match_parent"-->
                                <!--                                    android:layout_height="wrap_content"-->
                                <!--                                    android:layout_margin="2dp"-->
                                <!--                                    android:gravity="left"-->
                                <!--                                    android:text="Mr Ramesh"-->
                                <!--                                    android:textColor="@color/colorPrimary"-->
                                <!--                                    android:textSize="18sp" />-->


                                <com.gifola.customfonts.MyTextView
                                    android:id="@+id/mobile_no_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:gravity="left"
                                    android:text="+91 9876543210"
                                    android:textColor="@color/darkgrey"
                                    android:textSize="16sp" />


                            </LinearLayout>


                        </LinearLayout>

                        <com.gifola.customfonts.MyTextViewMedium
                            android:id="@+id/profilephoto"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Add/Change Profile Photo"
                            android:textColor="@color/blue"
                            android:textSize="16sp"></com.gifola.customfonts.MyTextViewMedium>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">

                            <com.gifola.customfonts.MyTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.7"
                                android:text="Name"
                                android:textSize="16sp"></com.gifola.customfonts.MyTextViewBold>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1.1"
                                    android:background="@drawable/border">

                                    <com.gifola.customfonts.MyEditText
                                        android:id="@+id/name_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:background="@drawable/botton_tranparent_line"
                                        android:gravity="center_vertical"
                                        android:hint="Enter Name here !!"
                                        android:inputType="text"
                                        android:padding="6dp"
                                        android:singleLine="true"
                                        android:text="Dr. Viplawendra Kumar Verma"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp"></com.gifola.customfonts.MyEditText>


                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">

                            <com.gifola.customfonts.MyTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.7"
                                android:text="Organisation"
                                android:textSize="16sp"></com.gifola.customfonts.MyTextViewBold>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1.1"
                                    android:background="@drawable/border">

                                    <com.gifola.customfonts.MyEditText
                                        android:id="@+id/organization_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:background="@drawable/botton_tranparent_line"
                                        android:gravity="center_vertical"
                                        android:hint="Enter Organization. here !!"
                                        android:inputType="textCapWords"
                                        android:padding="6dp"
                                        android:singleLine="true"
                                        android:text="Mindkey Technologies"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp"></com.gifola.customfonts.MyEditText>


                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">

                            <com.gifola.customfonts.MyTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.7"
                                android:text="Designation"
                                android:textSize="16sp"></com.gifola.customfonts.MyTextViewBold>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1.1"
                                    android:background="@drawable/border">

                                    <com.gifola.customfonts.MyEditText
                                        android:id="@+id/designation_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:background="@drawable/botton_tranparent_line"
                                        android:gravity="center_vertical"
                                        android:hint="Enter Designation here !!"
                                        android:inputType="textCapWords"
                                        android:padding="6dp"
                                        android:singleLine="true"
                                        android:text="Vise President"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp"></com.gifola.customfonts.MyEditText>


                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">

                            <com.gifola.customfonts.MyTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.7"
                                android:text="Email"
                                android:textSize="16sp"></com.gifola.customfonts.MyTextViewBold>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1.1"
                                    android:background="@drawable/border">

                                    <com.gifola.customfonts.MyEditText
                                        android:id="@+id/email_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:background="@drawable/botton_tranparent_line"
                                        android:gravity="center_vertical"
                                        android:hint="Enter Email here !!"
                                        android:inputType="textEmailAddress"
                                        android:padding="6dp"
                                        android:singleLine="true"
                                        android:text="vkverma@gmail.com"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp"></com.gifola.customfonts.MyEditText>


                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">

                            <com.gifola.customfonts.MyTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.7"
                                android:text="Work Address"
                                android:textSize="16sp"></com.gifola.customfonts.MyTextViewBold>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1.1"
                                    android:background="@drawable/border">

                                    <com.gifola.customfonts.MyEditText
                                        android:id="@+id/work_address_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:background="@drawable/botton_tranparent_line"
                                        android:gravity="center_vertical"
                                        android:hint="Enter Work Address here !!"
                                        android:inputType="textCapWords"
                                        android:padding="6dp"
                                        android:singleLine="true"
                                        android:text="Surat Nagar, Dhanwapur Road Gurgaon - 122006"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp"></com.gifola.customfonts.MyEditText>


                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">

                            <com.gifola.customfonts.MyTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.7"
                                android:text="Home Address"
                                android:textSize="16sp"></com.gifola.customfonts.MyTextViewBold>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1.1"
                                    android:background="@drawable/border">

                                    <com.gifola.customfonts.MyEditText
                                        android:id="@+id/home_address_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:background="@drawable/botton_tranparent_line"
                                        android:gravity="center_vertical"
                                        android:hint="Enter Home Address here !!"
                                        android:inputType="textCapWords"
                                        android:padding="6dp"
                                        android:singleLine="true"
                                        android:text="Sector-4, Gurgaon-122006"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp"></com.gifola.customfonts.MyEditText>


                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">

                            <com.gifola.customfonts.MyTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.7"
                                android:text="DOB"
                                android:textSize="16sp"></com.gifola.customfonts.MyTextViewBold>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1.1"
                                    android:background="@drawable/border">

                                    <com.gifola.customfonts.MyEditText
                                        android:id="@+id/dob_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:clickable="true"

                                        android:background="@drawable/botton_tranparent_line"
                                        android:gravity="center_vertical"
                                        android:hint="Enter DOB here !!"
                                        android:padding="6dp"
                                        android:singleLine="true"

                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp"></com.gifola.customfonts.MyEditText>


                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </ScrollView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/backcard"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_margin="4dp"
                            android:elevation="4dp"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardCornerRadius="4dp">

                            <com.gifola.customfonts.MyTextViewMedium

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="3dp"
                                android:gravity="center|center_vertical"
                                android:paddingLeft="5dp"
                                android:text="Back"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/sendcard"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_margin="4dp"
                            android:elevation="4dp"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardCornerRadius="4dp">

                            <com.gifola.customfonts.MyTextViewMedium
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="3dp"
                                android:gravity="center|center_vertical"
                                android:paddingLeft="5dp"
                                android:text="Save"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>
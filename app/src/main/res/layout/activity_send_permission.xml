                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="6dp"
                        android:padding="3dp"
                        android:src="@drawable/error"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
